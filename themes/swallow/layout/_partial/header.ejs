<header id="header" class="header">
  <div class="inner">
    <div class="wrap">
      <div class="header-brand">
        <!-- <img src="<%- url_for(theme.logo) %>" alt=""> -->
        <a class="brand-title" href="<%- url_for() %>">「<%= config.subtitle %>」</a>
      </div>
      <div class="header-nav">
        <ul id="menu-icon" class="menu-icon">
          <li></li><li></li><li></li>
        </ul>
        <ul id="menu-list" class="menu-list">
          <% for (var i in theme.nav){ %>
            <li class="menu-item"><a href="<%- url_for(theme.nav[i]) %>"><%= __(i) %></a></li>
          <% } %>
        </ul>
      </div>
    </div>
    <% if (is_post()) { %>
      <div id="page-title" class="page-title">
        <a class="home-link" href="<%- url_for() %>"></a>
        <h1 class="top-title"><% if (page.title){ %><%= page.title %><% } else { %><%= config.title %><% } %></h1>
        <a id="qr-code" class="qr-code" href="javascript: void(0)"></a>
      </div>
    <% } %>
  </div>
</header>

<div class="copy"></div>

<% if (is_post()) { %>
  <div id="qr" class="qr"></div>
<% } %>

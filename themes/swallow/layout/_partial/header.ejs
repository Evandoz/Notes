<header id="header" class="header <% if (is_home()) { %>is-home<% } else if (is_post()) { %>is-post<% } else { %>is-page<% } %>">
  <div class="outer">
    <% if (!is_home()) { %>
      <div class="logo">
        <a class="title" href="<%- url_for() %>"><%= config.title %></a>
      </div>
    <% } %>

    <div class="nav">
      <ul id="nav-icon" class="nav-icon">
        <li></li><li></li><li></li>
      </ul>
      <ul class="nav-menu">
        <% for (var i in theme.nav){ %>
          <li class="nav-item">
            <a href="<%- url_for(theme.nav[i]) %>"><%= __(i) %></a>
          </li>
        <% } %>
      </ul>
    </div>

  </div>
</header>

<article id="<%= post.slug %>" class="article">
  <%- partial('post/gallery') %>
  <div class="article-content">
    <%- partial('post/title') %>
    <div class="post-meta">
      <%- partial('post/date', {date_format: 'MMMMDD, YYYY'}) %>
      <%- partial('post/category') %>
    </div>
    <div id="post-content" class="post-content">
      <% if (index) { %>
        <% if (post.excerpt) { %>
          <%- post.excerpt %>
        <% } else { %>
          <p><%- truncate(strip_html(post.content), {length: 80, omission: '...'}) %></p>
        <% }%>
      <% } else { %>
        <%- post.content %>
      <% } %>
    </div>
    <% if (!index) { %>
      <div class="post-footer">
        <%- partial('post/copyright') %>
        <%- partial('post/nav') %>
        <% if (post.comments) { %>
          <%- partial('post/comment') %>
        <% } %>
      </div>
    <% } %>
  </div>
</article>

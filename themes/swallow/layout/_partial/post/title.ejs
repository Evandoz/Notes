<% if (post.link){ %>
  <a class="<%= class_name %>" href="<%- url_for(post.link) %>" target="_blank"><%= post.title %></a>
<% } else if (post.title){ %>
  <% if (is_post()){ %>
  	<h1 class="<%= class_name %>"><%= post.title %></h1>
  <% } else { %>
  	<a class="<%= class_name %>" href="<%- url_for(post.path) %>" target="_blank"><%= post.title %></a>
  <% } %>
<% } %>
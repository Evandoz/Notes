<% if (post.link){ %>
  <h1 class="post-link"><a href="<%- url_for(post.link) %>"><%= post.title %></a></h1>
<% } else if (post.title){ %>
  <% if (index){ %>
    <h1 class="post-link"><a href="<%- url_for(post.path) %>"><%= post.title %></a></h1>
  <% } else { %>
  	<h1 class="post-title"><%= post.title %></h1>
  <% } %>
<% } %>

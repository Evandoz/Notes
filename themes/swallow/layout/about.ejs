<% if (page.featured_image){ %>
  <div class="cover" style="background-image: url('<%- url_for(page.featured_image) %>')">
<% } else { %>
  <div class="cover" style="background-image: url('<%- url_for(theme.background) %>')">
<% } %>
  <h1 class="title"><%= __('about') %></h1>
  <p class="desc"><%= __('about') %></p>
</div>
<div class="inner">
  <article id="<%= page.slug %>" class="article about card">
    <h1 class="post-title"><%= __('about') %></h1>
    <div class="post-content"><%- page.content %></div>
  </article>
  <!-- <% if (page.comments) { %>
    <%- partial('_partial/comment') %>
  <% } %> -->
</div>

<% if (page.photos && page.photos != ''){ %>
  <div class="cover" style="background-image: url('<%- url_for(page.photos[0]) %>')">
<% } else { %>
  <div class="cover" style="background-image: url('<%- url_for(theme.banner) %>')">
<% } %>
  <h2 class="title"><%= __('tag') %></h2>
  <p class="desc"><%= __('tags') %>ï¼š<%= site.tags.length %></p>
</div>
<div class="inner">
  <div class="archive tag card">
    <% site.tags.each(function(tag) { %>
      <a class="tag-item" data-slug="<%= tag.slug %>" href="<%- url_for(tag.path) %>">
        <span class="tag-title"><%= tag.name %></span>
        <span class="tag-count"><%= tag.length %></span>
      </a>
    <% }) %>
  </div>
</div>

.footer
  position: relative
  text-align: center
  overflow: hidden
  .copyright
    position: relative
    background-position: 50% 20%
    background-size: cover
    padding: 90px 0 30px
    z-index: 4
    p
      margin: 0 0 10px
      color: color-light
      font-size: .9em
      &:last-child
        margin: 0
      a
        color: color-light
  .canvas
    position: absolute
    top: 0
    height: 100%
    width: 100%

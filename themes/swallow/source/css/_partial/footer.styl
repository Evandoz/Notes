.footer
  text-align: center
  .copyright
    position: relative
    background-position: 50% 20%
    background-size: cover
    padding: 60px 0
    &:before
      content: ''
      position: absolute
      top: 0
      right: 0
      bottom: 0
      left: 0
      background: hsla(197, 36%, 49%, 0.8)
    p
      position: relative
      color: color-white
      &:first-child
        margin-bottom: 15px

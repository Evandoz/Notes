.mobile-nav
  display: none
  @media mq-mobile
    position: fixed
    top: 0
    width: 80vw
    margin: 0 10vw
    padding: 20px 0
    background: color-white
    border-radius: 2px
    z-index: 49
    .menu-item
      display: block
      padding: 10px 30px
      color: color-dark

.over-layer
  display: none
  @media mq-mobile
    position: fixed
    top: 0
    right: 0
    bottom: 0
    left: 0
    background: rgba(0, 0, 0, .5)
    z-index: 9

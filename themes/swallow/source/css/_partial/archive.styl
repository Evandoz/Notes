.archive
  margin: 50px 0

  .archive-year
    display: block
    margin: 15px 0
    font-size: 1.1em
    color: color-grey
    letter-spacing: 1px
    &:first-child
      margin-top: 0

  .archive-list
    padding: 5px 0
  .archive-item
    display: inline-block
    width: 180px
    height: 200px
    margin: 20px
    padding: 20px
    box-sizing: border-box
    border-radius: 6px
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1)
    &:last-child
      margin-bottom: 0
    .post-date,
    .post-link
      display: block
      line-height: 1.6
      font-size: 16px
    .post-link a
      color: color-font

    .post-date
      color: color-grey
    &.category,
    &.tag
      width: 120px
      height: 90px
  .archive-item a
    display: block
    color: color-font
    text-align: center
    .category-title
      margin-bottom: 10px


.paginator
  display: flex
  justify-content: center
  align-items: center
  margin: 50px 0
  a, span
    height: 40px
    width: 40px
    margin: 0 10px
    padding: 10px
    box-sizing: border-box
    line-height: @height
    text-align: center
    border-radius: 6px
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1)
  .page-number
    display: none
  .prev, .next
    color: color-black
  ul.prev-icon
    position: relative
    width: 20px
    height: 20px
    li
      position: absolute
      left: 0
      top: 9px
      width: 100%
      height: 1px
      background: color-dark
      &:first-child
        width: 45%
        transform-origin: 0 50%
        transform: rotate(-45deg)
      &:last-child
        width: 45%
        transform-origin: 0 50%
        transform: rotate(45deg)
  ul.next-icon
    position: relative
    width: 20px
    height: 20px
    li
      position: absolute
      right: 0
      top: 9px
      width: 100%
      height: 1px
      background: color-dark
      &:first-child
        width: 45%
        transform-origin: 100% 50%
        transform: rotate(45deg)
      &:last-child
        width: 45%
        transform-origin: 100% 50%
        transform: rotate(-45deg)

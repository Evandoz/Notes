.archives-wrap
  position: relative
  margin: -60px 0 90px
  padding: 60px
  background: color-white
  border-radius: 2px
  box-shadow: 0 1px 35px rgba(0, 0, 0 , .05)
  @media mq-mobile
    padding: 40px 20px
  .archives
    position: relative
    &:after
      content: ''
      position: absolute
      left: 0
      top: 1px
      width: 3px
      height: 100%
      margin-left: -2px
      background: #cdcdcd
  &.archives-tagcloud
    margin-left: 0
    &:after
      content: none
  &.archives-category
    &:after
      content: none

  .archive-title
  .category-title
  .tag-title
    position: relative
    margin-bottom: 50px
    padding-left: 25px
    letter-spacing: 2px
    &:before
      content: ''
      position: absolute
      left: 0
      top: 50%
      margin-top: -11px
      margin-left: -11px
      width: 22px
      height: 22px
      border: 5px solid color-white
      border-radius: 50%
      background: color-border
      z-index: 4

  .archive-title
    font-size: 1.1em
    @media mq-mobile
      font-size: 1em

  .category-title
  .tag-title
    font-size: 1.4em
    @media mq-mobile
      font-size: 1.2em

  .archive-year
    position: relative
    margin: 30px 0
    padding-left: 25px
    font-size: 1.3em
    color: color-font
    font-weight: bold
    letter-spacing: 1px
    text-transform: uppercase
    @media mq-mobile
      font-size: 1.1em
    &:before
      content: ''
      position: absolute
      left: 0
      top: 50%
      margin-top: -10px
      margin-left: -10px
      width: 20px
      height: 20px
      border: 5px solid color-white
      border-radius: 50%
      background: color-border
      z-index: 4

  .archive-article
    position: relative
    padding: 10px 0
    padding-left: 25px
    font-size: 1.1em
    line-height: 1.8
    border-bottom: 1px dashed color-border
    @media mq-mobile
      font-size: 1em
    &:last-child
      margin-bottom: 0
    &:hover
      &:before
        background: color-black
    &:before
      content: ''
      position: absolute
      left: 0
      top: 50%
      margin-top: -9px
      margin-left: -9px
      width: 18px
      height: 18px
      border: 5px solid color-white
      border-radius: 50%
      background: color-border
      transition: border-color .3s
      z-index: 4

    .archive-article-date
      display: inline-block
      padding-right: 15px
      color: color-font

    .archive-article-title
      display: inline-block
      color: color-font
      letter-spacing: 2px
      &:hover
        color: color-black

  .tagcloud
    padding: 20px
    background: color-white
    text-align: center
    a
      display: inline-block
      margin: 5px
      color: color-font
      &:hover
        color: color-black
  .category
    padding-left: 15px
    font-size: 1.1em
    font-weight: 400
    a
      color: color-font

.paginator
  display: flex
  justify-content: center
  align-items: center
  margin: -30px 0 60px
  font-size: 1.2em
  text-align: center
  overflow: hidden
  a, span
    margin: 0 20px
    text-align: center
  .page-number
    color: color-font
    &:hover, &.current
      color: color-black
      font-weight: 600
  .prev, .next
    color: color-black

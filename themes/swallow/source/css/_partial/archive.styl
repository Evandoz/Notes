.archive
  padding: 50px 0

  .archive-year
    display: block
    margin: 15px 0
    font-size: 1.1em
    color: color-grey
    letter-spacing: 1px
    &:first-child
      margin-top: 0

  ul.archive-list
    margin-left: 10px
    padding: 5px 0
    li.archive-item
      position: relative
      margin-bottom: 15px
      font-size: 0
      &:last-child
        margin-bottom: 0
      .post-date,
      .post-link
        display: block
        line-height: 1.6
        font-size: 16px

      .post-date
        position: absolute
        left: 0
        color: color-grey

      .post-link
        margin-left: 105px
        color: color-font
  &.category
    padding: 40px 2%
    display: flex
    justify-content: center
    align-items: center
    flex-flow: wrap

    .category-link
      display: block
      width: 150px
      height: 50px
      margin: 10px
      line-height: @height
      color: color-font
      text-align: center
      border-radius: 1px
      border: 1px solid color-border
      box-sizing: border-box
      transition: background .3s linear
      &:hover, &:focus
        background: color-light

.paginator
  display: flex
  justify-content: center
  align-items: center
  a, span
    height: 40px
    width: 40px
    padding: 10px
    box-sizing: border-box
    line-height: @height
    text-align: center
    border-radius: 1px
  .page-number
    display: none
  .prev, .next
    color: color-black
  ul.prev-icon
    position: relative
    width: 20px
    height: 20px
    li
      position: absolute
      left: 0
      top: 9px
      width: 100%
      height: 1px
      background: color-dark
      &:first-child
        width: 45%
        transform-origin: 0 50%
        transform: rotate(-45deg)
      &:last-child
        width: 45%
        transform-origin: 0 50%
        transform: rotate(45deg)
  ul.next-icon
    position: relative
    width: 20px
    height: 20px
    li
      position: absolute
      right: 0
      top: 9px
      width: 100%
      height: 1px
      background: color-dark
      &:first-child
        width: 45%
        transform-origin: 100% 50%
        transform: rotate(45deg)
      &:last-child
        width: 45%
        transform-origin: 100% 50%
        transform: rotate(-45deg)

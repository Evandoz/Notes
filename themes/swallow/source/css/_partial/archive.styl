.archives-wrap
  position: relative
  margin: -90px 0 60px
  padding: 60px
  background: color-white
  border-radius: 2px
  box-shadow: 0 8px 20px rgba(0, 0, 0 , .12)
  @media mq-mobile
    padding: 40px 20px
  .archives
    position: relative
    &:after
      content: ''
      position: absolute
      left: 0
      top: 1px
      width: 2px
      height: 100%
      margin-left: -1px
      background: #cdcdcd
  &.archives-tagcloud
    margin-left: 0
    &:after
      content: none
  &.archives-category
    &:after
      content: none

  .archive-title
  .category-title
  .tag-title
    position: relative
    margin-bottom: 50px
    padding-left: 25px
    letter-spacing: 2px
    &:before
      content: ''
      position: absolute
      left: 0
      top: 50%
      margin-top: -8px
      margin-left: -8px
      width: 16px
      height: 16px
      border: 3px solid color-white
      border-radius: 50%
      background: color-border
      z-index: 4

  .category-title
  .tag-title
    font-size: 1.2em
    @media mq-mobile
      font-size: 1.1em

  .archive-year
    position: relative
    margin: 30px 0
    padding-left: 25px
    font-size: 1.2em
    color: color-font
    letter-spacing: 1px
    text-transform: uppercase
    @media mq-mobile
      font-size: 1.1em
    &:before
      content: ''
      position: absolute
      left: 0
      top: 50%
      margin-top: -7px
      margin-left: -7px
      width: 14px
      height: 14px
      border: 3px solid color-white
      border-radius: 50%
      background: color-border
      z-index: 4

  .archive-article
    position: relative
    padding: 10px 0
    padding-left: 25px
    line-height: 1.8
    &:last-child
      margin-bottom: 0
    &:hover
      &:before
        background: color-black
    &:before
      content: ''
      position: absolute
      left: 0
      top: 50%
      margin-top: -6px
      margin-left: -6px
      width: 12px
      height: 12px
      border: 3px solid color-white
      border-radius: 50%
      background: color-border
      transition: border-color .3s
      z-index: 4

    .archive-article-date
      display: inline-block
      padding-right: 15px
      color: color-font

    .archive-article-title
      display: inline-block
      color: color-font
      letter-spacing: 2px
      &:hover
        color: color-black

  .tagcloud
    padding: 20px
    background: color-white
    text-align: center
    a
      display: inline-block
      margin: 5px
      color: color-font
      &:hover
        color: color-black
  .category
    padding-left: 15px
    font-size: 1.1em
    font-weight: 400
    a
      color: color-font

.paginator
  display: flex
  justify-content: center
  align-items: center
  margin: 30px 0
  text-align: center
  a, span
    height: 40px
    width: 40px
    margin: 0 10px
    line-height: @height
    text-align: center
    border-radius: 1px
    background: color-white
    box-shadow: 0 5px 15px rgba(0, 0, 0 , .15)
  .page-number
    color: color-font
    &:hover, &.current
      color: color-white
      background: color-theme
  .prev, .next
    color: color-black

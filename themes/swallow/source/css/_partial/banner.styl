.banner
  position: relative
  display: flex
  height: 56vh
  margin-top: -70px
  flex-direction: column
  justify-content: center
  @media mq-mobile
    height: 42vh
    margin-top: -80px
  .back
    position: absolute
    top: 0
    right: 0
    bottom: 0
    left: 0
    background-size: cover
    background-position: 50% 20%
    background-repeat: no-repeat
  .content
    position: relative
    max-width: max-width
    margin: 0 auto
    text-align: center
    background: transparent
    text-shadow: 0 0 25px rgba(0, 0, 0, .05)
    z-index: 1
    h2
      margin-bottom: 50px
      font-size: 2.2em
      color: color-white
      @media mq-mobile
        font-size: 2em
      a
        color: color-white


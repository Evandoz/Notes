.banner
  position: relative
  height: 56vh
  @media mq-mobile
    height: 42vh
  .inner
    display: flex
    position: fixed
    flex-direction: column
    justify-content: center
    height: inherit
    width: 100%
    top: 0
    left: 0
    .back
      position: absolute
      top: 0
      right: 0
      bottom: 0
      left: 0
      margin-top: -30%
      background-position: 50% 40%
      background-repeat: no-repeat
      background-size: cover
    .content
      position: relative
      max-width: max-width
      margin: 0 auto
      text-align: center
      background: transparent
      text-shadow: 0 0 25px rgba(0, 0, 0, .05)
      z-index: 1
      h2
        margin-bottom: 50px
        font-size: 2.2em
        color: color-white
        @media mq-mobile
          font-size: 2em
        a
          color: color-white


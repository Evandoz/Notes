.content
  position: relative
  padding: 0 2%

.article-list
  .article
    height: 350px
    @media mq-mobile
      height: auto
      padding: 0

    .article-gallery
      height: 100%
      width: 50%
      padding: 50px
      &.sticky
        padding: 0
        &.left
          float: left
          border-radius: 1px 0 0 1px

          & + .article-content
            margin-left: 50%
        &.right
          float: right
          border-radius: 0 1px 1px 0
      @media mq-mobile
        width: 100%
        height: 160px
        padding: 0!important
        float: none!important
        border-radius: 1px 1px 0 0!important

      .image
        height: 100%
        width: 100%
        overflow: hidden
        background-position: center center
        background-repeat: no-repeat
        background-size: cover

    .article-content
      position: relative
      display: flex
      height: 100%
      width: 50%
      flex-direction: column
      justify-content: center
      z-index: 1
      @media mq-mobile
        width: 100%
        margin: 0!important
      .post-title
        margin: 0
        text-align: left
        @media mq-mobile
          text-align: center
      .post-meta
        margin: 0

.article
  position: relative
  margin: 50px auto
  border-radius: 1px
  background: color-white
  @media mq-normal
    width: 78%
    min-width: 982px

  .article-content
    padding: 50px
    display: flex
    flex-direction: column
    justify-content: space-between
    @media mq-mobile
      padding: 30px 20px
    .post-title
      margin-bottom: 10px
      line-height: 1.6
      font-size: 1.35em
      color: #333
      font-weight: 500
      text-align: center

    .post-content
      color: color-font
      @extend $base-style
      p, table
        line-height: 2
        margin: 20px 0
      h1, h2, h3, h4, h5, h6
        margin: 25px 0
        color: color-black
      a
        color: color-black
      ul, ol, dl
        margin-top: 10px
        margin-bottom: 10px
      img, video
        max-width: 100%
        height: auto
        display: block
        margin: 20px auto
      iframe
        border: none
      table
        width: 100%
        border-collapse: collapse
      tr
        &:hover
          background: color-background
      th
        font-weight: bold
        border: 1px solid color-border
        border-bottom-width: 2px
        padding: 0.5em
        background: color-background
      td
        border: 1px solid color-border
        padding: 10px 0
      blockquote
        margin: 30px 0
        padding: 15px 20px
        font-family: font-serif
        font-size: 1.25em
        color: color-black
        background: color-background
        p
          margin: 0
          line-height: 1.8
        footer
          margin: 20px 0
          font-size: font-size
          font-family: font-sans
          cite
            &:before
              content: "â€”"
              padding: 0 0.5em
      .pullquote
        text-align: left
        width: 45%
        margin: 0
        &.left
          margin-left: 0.5em
          margin-right: 1em
        &.right
          margin-right: 0.5em
          margin-left: 1em
      .caption
        color: color-grey
        display: block
        font-size: 0.9em
        margin-top: 0.5em
        position: relative
        text-align: center
      .video-container
        position: relative
        padding-top: (9 / 16 * 100)% // 16:9 ratio
        height: 0
        overflow: hidden
        iframe, object, embed
          position: absolute
          top: 0
          left: 0
          width: 100%
          height: 100%
          margin-top: 0

    .post-meta
      margin-top: 15px
      font-size: 0
      @media mq-mobile
        text-align: center
      span, a
        display: inline-block
        margin-right: 15px
        font-size: 14px
        color: #567987
        text-decoration: none
        text-transform: uppercase
        &:last-child
          margin: 0

    .post-footer
      .post-copyright
        margin: 20px 0
        line-height: 2
        font-size: 14px
        color: color-font
        @media mq-mobile
          text-align: center

      .post-paginator
        display: flex
        justify-content: space-between
        align-items: center
        flex-flow: wrap
        margin: 25px 0
        padding: 10px 0
        font-size: 15px
        border-top: 1px solid color-border
        border-bottom: 1px solid color-border

        .paginator-link
          display: block
          margin: 5px 0
          color: color-font
          text-align: center

      .post-comment
        .load-button
          width: 100px
          margin: 0 auto
          padding: 5px 15px
          text-align: center
          border: 1px solid color-border
          border-radius: 1px
          cursor: pointer

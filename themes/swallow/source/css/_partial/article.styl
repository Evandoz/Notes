.article
  position: relative
  margin: 0 auto
  padding: 50px 4%

  @media mq-normal
    width: 56%
    min-width: 720px

  .article-content
    display: flex
    flex-direction: column
    justify-content: space-between
    .post-title
      margin-bottom: 10px
      line-height: 1.6
      font-size: 1.35em
      color: color-dark
      font-weight: 500
      text-align: center

    .post-content
      color: color-font
      @extend $base-style
      p, table
        line-height: 2
        margin: 15px 0
      h1, h2, h3, h4, h5, h6
        margin: 20px 0
        padding-left: 15px
        color: color-black
        border-left: 5px solid color-grey
      a
        color: color-black
      ul, ol, dl
        margin-top: 10px
        margin-bottom: 10px
      img, video
        max-width: 100%
        height: auto
        display: block
        margin: 15px auto
      iframe
        border: none
      table
        width: 100%
        border-collapse: collapse
      tr
        &:hover
          background: color-light
      th
        font-weight: bold
        border: 1px solid color-border
        border-bottom-width: 2px
        padding: 0.5em
        background: color-light
      td
        border: 1px solid color-border
        padding: 10px 0
      blockquote
        margin: 20px 0
        padding: 15px 20px
        font-family: font-serif
        font-size: 1.25em
        color: color-black
        border: 1px solid color-border
        border-radius: 1px
        background: color-light
        p
          margin: 0
          line-height: 1.8
        footer
          margin: 20px 0
          font-size: font-size
          font-family: font-sans
          cite
            &:before
              content: "â€”"
              padding: 0 0.5em
      .pullquote
        text-align: left
        width: 45%
        margin: 0
        &.left
          margin-left: 0.5em
          margin-right: 1em
        &.right
          margin-right: 0.5em
          margin-left: 1em
      .caption
        color: color-grey
        display: block
        font-size: 0.9em
        margin-top: 0.5em
        position: relative
        text-align: center
      .video-container
        position: relative
        padding-top: (9 / 16 * 100)% // 16:9 ratio
        height: 0
        overflow: hidden
        iframe, object, embed
          position: absolute
          top: 0
          left: 0
          width: 100%
          height: 100%
          margin-top: 0

    .post-meta
      margin-top: 15px
      font-size: 0
      @media mq-mobile
        text-align: center
      span, a
        display: inline-block
        margin-right: 15px
        font-size: 14px
        color: color-grey
        text-decoration: none
        &:last-child
          margin: 0

    .post-footer
      .post-copyright
        margin: 20px 0
        line-height: 2
        font-size: 14px
        color: color-font
        @media mq-mobile
          text-align: center

      .post-paginator
        display: flex
        justify-content: space-between
        align-items: center
        flex-flow: wrap
        margin: 25px 0
        padding: 10px 0
        font-size: 15px
        border-top: 1px solid color-border
        border-bottom: 1px solid color-border

        .paginator-link
          display: block
          margin: 5px 0
          color: color-font
          overflow: hidden
          white-space: nowrap
          text-overflow: ellipsis

      .post-comment
        .gt-container
          .gt-meta
            z-index: 1
            .gt-popup
              margin-top: 10px
              box-shadow: 0 0 10px rgba(0, 0, 0, .1)
          .gt-avatar-github
            @media mq-mobile
              display: none!important
          .gt-header-comment
            @media mq-mobile
              margin-left: 0!important
          .gt-header-textarea, .gt-header-preview, .gt-btn
            border-radius: 1px
          .gt-header-textarea
            border-color: color-border
            background-color: color-lighter
            &:hover
              background-color: color-light
          .gt-header-controls
            margin-top: 1.2em
          .gt-link
            border-bottom: none
          .gt-comments-null
            display: none
          &:after
            display: none

.poptrox-popup
  background: rgba(31, 34, 36, 0.925)
  box-shadow: 0 1em 3em 0.5em rgba(0, 0, 0, 0.25)
  .loader
    position: absolute
    top: 50%
    left: 50%
    width: 60px
    height: 60px
    margin: -30px 0 0 -30px
    text-align: center
    opacity: 0.5
    animation: spinner 1.25s infinite linear
    background-image: url('images/loader.svg')
    background-position: center
    background-repeat: no-repeat
    background-size: contain
  .closer
    position: absolute
    top: 0
    right: 0
    height: 60px
    width: 60px
    transition: opacity 0.2s ease-in-out
    background-image: url('images/closer.svg')
    background-position: center
    background-repeat: no-repeat
    background-size: 60px
    opacity: 0
    z-index: 4
  .nav-previous, .nav-next
    position: absolute
    top: 50%
    height: 80px
    width: 60px
    margin-top: -40px
    transition: opacity 0.2s ease-in-out
    background-image: url('images/arrow.svg')
    background-position: center
    background-repeat: no-repeat
    background-size: 60px
    opacity: 0
    z-index: 4
  .nav-previous
    left: 0
    transform: scaleX(-1)
  .nav-next
    right: 0
  &:hover
    .closer, .nav-previous, .nav-next
      opacity: 0.75;

    .closer:hover, .nav-previous:hover, .nav-next:hover
      opacity: 1.0;
  .closer, .nav-previous, .nav-next
    @media mq-mobile
      display: none!important
  &.loading:before
    opacity: 0;

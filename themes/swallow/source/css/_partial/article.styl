.content
  background: color-background
  .inner
    margin: 0 auto
    padding: 0 15px
    max-width: 960px

.article
  position: relative
  margin: -60px auto 90px
  padding: 60px
  border-radius: 2px
  background: color-white
  box-shadow: 0 1px 35px rgba(0, 0, 0 , .05)
  .post-meta
    text-align: center
  @media mq-mobile
    padding: 30px 20px
  &.list
    height: 320px
    .post-meta
      text-align: left
    @media mq-mobile
      height: auto
      padding: 0

.article-gallery
  display: flex
  height: 100%
  width: 45%
  flex-direction: column
  justify-content: center
  overflow: hidden
  @media mq-mobile
    width: 100%
    border-radius: 2px 2px 0 0
  @media mq-tablet
    &.left
      margin-left: 0
      margin-right: 10%
      float: left
      text-align: left
      &.skip, &.sticky
        left: 0
        border-radius: 2px 0 0 2px
        &:before
          content: ''
          position: absolute
          top: -25%
          right: 0
          width: 36%
          height: 150%
          transform-origin: 0 0
          transform: skewX(32deg)
          background: color-white
          box-shadow: -30px 0 120px 10px rgba(255, 255, 255, 1)
          z-index: 2
        &:after
          content: ''
          position: absolute
          top: -25%
          right: 30%
          width: 20%
          height: 150%
          transform-origin: 0 0
          transform: skewX(32deg)
          filter: blur(5px)
          background: linear-gradient(right, #fff, rgba(255, 255, 255, .6))
          box-shadow: -50px 0 100px 10px rgba(255, 255, 255, .6)
          z-index: 4
      & + .article-content
        margin-left: 52%
    &.right
      margin-left: 10%
      margin-right: 0
      float: right
      text-align: right
      &.skip, &.sticky
        right: 0
        border-radius: 0 2px 2px 0
        &:before
          content: ''
          position: absolute
          top: -25%
          left: 0
          width: 36%
          height: 150%
          transform-origin: 0 0
          transform: skewX(-32deg)
          background: color-white
          box-shadow: 30px 0 120px 10px rgba(255, 255, 255, 1)
          z-index: 2
        &:after
          content: ''
          position: absolute
          top: -25%
          left: 30%
          width: 20%
          height: 150%
          transform-origin: 0 0
          transform: skewX(-32deg)
          filter: blur(5px)
          background: linear-gradient(left, #fff, rgba(255, 255, 255, .6))
          box-shadow: 50px 0 100px 10px rgba(255, 255, 255, .6)
          z-index: 4
    &.skip, &.sticky
      position: absolute
      top: 0
      bottom: 60px
      margin: 0
      width: auto
  img
    max-height: 100%
    max-width: 100%

.article-content
  position: relative
  display: flex
  height: 100%
  width: 48%
  flex-direction: column
  justify-content: center
  z-index: 4
  @media mq-mobile
    width: 100%
    margin: 0!important
    padding: 20px

.post-link
  font-size: 1.4em
  color: #333
  font-weight: 500

.post-title
  margin-bottom: 15px
  font-size: 1.4em
  color: #333
  font-weight: 500
  text-align: center

.post-meta
  color: #567987
  font-size: 14px
  font-weight: 600
  a
    color: #567987
    text-decoration: none

  .meta-date
  .meta-category
    display: inline-block
    padding: 0 5px
    color: #567987
    letter-spacing: 2px
    text-transform: uppercase

.post-summary
  margin: 15px 0
  color: #636869
  line-height: 1.8
  letter-spacing: 2px
  a
    color: color-black

.post-content
  color: #636869
  letter-spacing: 2px
  @extend $base-style
  p, table
    line-height: 1.8
    margin: 20px 0
  h1, h2, h3, h4, h5, h6
    margin: 30px 0
    color: color-black
  a
    color: color-black
  ul, ol, dl
    margin-top: 10px
    margin-bottom: 10px
  img, video
    max-width: 100%
    height: auto
    display: block
    margin: 20px auto
  iframe
    border: none
  table
    width: 100%
    border-collapse: collapse
  tr
    &:hover
      background: color-background
  th
    font-weight: bold
    border: 1px solid color-border
    border-bottom-width: 2px
    padding: 0.5em
    background: color-background
  td
    border: 1px solid color-border
    padding: 10px 0
  blockquote
    margin: 30px 0
    padding: 15px 20px
    font-family: font-serif
    font-size: 1.25em
    color: color-black
    border-left: 4px solid color-theme
    background: color-background
    p
      margin: 0
      line-height: 1.8
    footer
      margin: 20px 0
      font-size: font-size
      font-family: font-sans
      cite
        &:before
          content: "â€”"
          padding: 0 0.5em
  .pullquote
    text-align: left
    width: 45%
    margin: 0
    &.left
      margin-left: 0.5em
      margin-right: 1em
    &.right
      margin-right: 0.5em
      margin-left: 1em
  .caption
    color: color-grey
    display: block
    font-size: 0.9em
    margin-top: 0.5em
    position: relative
    text-align: center
  .video-container
    position: relative
    padding-top: (9 / 16 * 100)% // 16:9 ratio
    height: 0
    overflow: hidden
    iframe, object, embed
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      margin-top: 0

.post-footer
  margin-top: 60px
  .article-tag
    margin-top: 30px
    text-align: center
    a
      display: inline-block
      margin-right: 15px
      padding: 4px 10px
      color: color-font
      text-decoration: none
      background: color-border
      &:before
        content: "#"
        margin-right: 3px
  .article-copyright
    margin-bottom: 30px
    text-align: center
    p
      display: inline-block
      font-size: .9em
      color: color-font
      word-wrap: break-word
      letter-spacing: 1px

.article-paginator
  display: flex
  justify-content: space-between
  position: relative
  margin: -30px 0 60px
  border-top: 1px dashed color-border
  border-bottom: 1px dashed color-border

.article-paginator-link
  display: inline-block
  padding: 20px
  width: 49%
  color: color-font
  box-sizing: border-box
  text-align: center
  white-space: nowrap
  overflow: hidden
  word-wrap: normal
  text-overflow: ellipsis
  &:hover
    color: color-black
    .article-paginator-caption
      display: none
    .article-paginator-title
      display: inline

.article-newer
  .article-paginator-caption
    &:before
      content: '\f104'
      font-family: font-icon
      fonr-size: 1.2em
      margin-right: 50%
      padding: 5px 10px
      border: 1px solid color-grey
      border-radius: 50%

.article-older
  .article-paginator-caption
    &:after
      content: '\f105'
      font-family: font-icon
      margin-left: 50%
      padding: 5px 10px
      border: 1px solid color-grey
      border-radius: 50%

.article-paginator-title
  display: none
  white-space: nowrap
  overflow: hidden
  word-wrap: normal
  text-overflow: ellipsis

.article-comment
  margin: 60px 0
  padding: 60px
  background: color-white
  box-shadow: 0 1px 35px rgba(0, 0, 0 , .05)
  @media mq-mobile
    padding: 30px 20px
  .load-button
    width: 100px
    margin: 0 auto
    padding: 5px 15px
    color: color-white
    text-align: center
    background: color-theme
    border-radius: 2px
    cursor: pointer

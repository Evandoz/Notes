.content
  .container
    margin: 0 auto
    padding: 0 10px
    max-width: 800px

.articles-wrap
  padding-top: 40px
  .article
    position: relative
    box-shadow: 0 0 0 1px rgba(0, 0, 0, .05)
    .post-content
      padding: 30px 20px
  .article-header
    position: relative
    height: 160px
    padding: 20px

.article
  margin: 60px 0

.post-link
  font-size: 1.6em
  color: #333

.post-link
.article-title
  letter-spacing: 4px

.post-title
  margin-bottom: 15px
  font-size: 1.6em
  color: color-black

.post-meta
  color: #ccc
  font-size: .96em
  a
    color: #ccc
    text-decoration: none
    &:hover
      color: color-black

  .meta-date
  .meta-category
    display: inline-block
    color: #ccc
    line-height: 1
    letter-spacing: 2px
    text-transform: uppercase

  .meta-date
    margin-right: 6px

  .meta-category
    margin-left: 6px

.post-summary
  margin: 15px 0
  color: color-font
  line-height: 1.8
  letter-spacing: 2px

.article-content
  color: color-dark
  letter-spacing: 2px
  @extend $base-style
  p, table
    line-height: 1.8
    margin: 20px 0
  h1, h2, h3, h4, h5, h6
    margin: 30px 0
    color: color-black
  a
    color: color-theme
    text-decoration: none
    &:hover
      text-decoration: underline
  ul, ol, dl
    margin-top: 10px
    margin-bottom: 10px
  img, video
    max-width: 100%
    height: auto
    display: block
    margin: 20px auto
  iframe
    border: none
  table
    width: 100%
    border-collapse: collapse
  tr
    &:hover
      background: color-background
  th
    font-weight: bold
    border: 1px solid color-border
    border-bottom-width: 2px
    padding: 0.5em
    background: color-background
  td
    border: 1px solid color-border
    padding: 10px 0
  blockquote
    margin: 30px 0
    padding: 15px 20px
    font-family: font-serif
    font-size: 1.25em
    color: color-black
    border-left: 4px solid color-theme
    background: color-background
    p
      margin: 0
      line-height: 1.8
    footer
      margin: 20px 0
      font-size: font-size
      font-family: font-sans
      cite
        &:before
          content: "â€”"
          padding: 0 0.5em
  .pullquote
    text-align: left
    width: 45%
    margin: 0
    &.left
      margin-left: 0.5em
      margin-right: 1em
    &.right
      margin-right: 0.5em
      margin-left: 1em
  .caption
    color: color-grey
    display: block
    font-size: 0.9em
    margin-top: 0.5em
    position: relative
    text-align: center
  .video-container
    position: relative
    padding-top: (9 / 16 * 100)% // 16:9 ratio
    height: 0
    overflow: hidden
    iframe, object, embed
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      margin-top: 0

.article-more
  margin-top: 60px
  text-align: center
  a
    display: inline-block
    margin: 0 auto
    padding: 4px 20px
    text-align: center
    color: color-black!important
    letter-spacing: 1px
    text-decoration: none
    border: 2px solid color-black
    &:hover
      color: color-white!important
      background: color-black
      text-decoration: none

.article-footer
  margin-top: 60px
  .article-tag
    margin-top: 30px
    text-align: center
    a
      display: inline-block
      margin-right: 15px
      padding: 4px 10px
      color: color-font
      text-decoration: none
      background: color-border
      &:before
        content: "#"
        margin-right: 3px
  .article-copyright
    margin-bottom: 30px
    text-align: center
    p
      display: inline-block
      font-size: .9em
      color: color-font
      word-wrap: break-word
      letter-spacing: 1px

.article-paginator
  display: flex
  justify-content: space-between
  position: relative
  border-top: 1px dashed color-border
  border-bottom: 1px dashed color-border

.article-paginator-link
  display: inline-block
  padding: 20px
  width: 49%
  color: color-font
  box-sizing: border-box
  text-align: center
  white-space: nowrap
  overflow: hidden
  word-wrap: normal
  text-overflow: ellipsis
  &:hover
    color: color-black
    .article-paginator-caption
      display: none
    .article-paginator-title
      display: inline

.article-newer
  .article-paginator-caption
    &:before
      content: '\f104'
      font-family: font-icon
      fonr-size: 1.2em
      margin-right: 50%
      padding: 5px 10px
      border: 1px solid color-grey
      border-radius: 50%

.article-older
  .article-paginator-caption
    &:after
      content: '\f105'
      font-family: font-icon
      margin-left: 50%
      padding: 5px 10px
      border: 1px solid color-grey
      border-radius: 50%

.article-paginator-title
  display: none
  white-space: nowrap
  overflow: hidden
  word-wrap: normal
  text-overflow: ellipsis

.article-comment
  margin: 60px 0
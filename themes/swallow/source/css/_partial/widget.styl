.widget
  margin -70px auto 0
  font-size .875rem
  z-index 9

  + .widget
    margin-top 20px

  @media mq-mobile
    margin 0 auto

  &.more
    padding 0
    box-shadow none
    background transparent

    .more-list
      color #999
      text-align center
      li
        margin-bottom 5px

.widget-title
  position relative
  padding 0 0 10px

  &:before
    content ""
    position absolute
    bottom 0
    width 100%
    height 2px
    background #efefef

  &:after
    content ""
    position absolute
    left 0
    bottom 0
    width 20%
    height 2px
    background #ff0000

  + .widget-content
    padding 6px 0 0 0

.widget-cover
  padding 30px
  border-radius 2px 2px 0 0
  background 50%/cover no-repeat rgba(0, 0, 0, 0.96)

.avatar
  position relative
  left 50%
  transform translate3d(-50%, 75%, 0)
  width 80px
  height 80px
  padding 5px
  background #253b56
  overflow hidden
  border-radius 50%
  border 2px solid #fff

.profile
  padding 0!important
  text-align center

.author
  padding 70px 30px 0
  font-weight 600

.site-meta
  display flex
  flex-wrap wrap
  padding 30px

  .col
    flex-basis 0%
    flex-grow 1
    max-width 100%

  .amount
    line-height 1.4
    font-family nicetheme, Arial, sans-serif
    font-weight 700

  .text
    display block
    margin-top 5px
    color #9ca0ad
    font-size 0.785rem

.category-list-item
  display flex
  justify-content space-between
  align-items center
  padding 6px 0
  border-bottom 1px dashed #ccc

.category-list-link
  display inline-block
  flex 1

.category-list-count
  position relative
  display inline-block

.widget .category-list-count
  padding 0 6px
  &:before,
  &:after
    position absolute

  &:before
    content "("
    left 0
  &:after
    content ")"
    right 0

.aside
  &.sticky
    @media mq-moblet
      position fixed
      top 0
      .widget:first-child
        margin-top 0
  &.post
    .widget:first-child
      margin-top 0

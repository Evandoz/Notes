.widget
  margin -80px auto 0
  padding 30px
  font-size .875rem
  z-index 9

  + .widget
    margin-top 20px

  @media mq-mobile
    margin 0 auto

.widget-title
  position relative
  padding 0 0 10px

  &:before
    content ""
    position absolute
    bottom 0
    width 100%
    height 2px
    background #efefef

  &:after
    content ""
    position absolute
    left 0
    bottom 0
    width 20%
    height 2px
    background #ff0000

  + .widget-content
    padding 5px 0 0 0

.category-list-item
  display flex
  justify-content space-between
  align-items center
  padding 5px 0
  border-bottom 1px dashed #ccc

.category-list-link
  display inline-block
  flex 1

.category-list-count
  position relative
  display inline-block
  padding 0 6px
  &:before,
  &:after
    position absolute

  &:before
    content "("
    left 0
  &:after
    content ")"
    right 0

.toc
  width inherit
  padding 40px 0
  transition top .2s ease-in-out

  @media mq-mobile
    display none

.sticky
  position fixed
  top 0

.toc-title
  padding 0 5px 10px 5px

.toc-content-item.none
  padding 5px

.toc-content-level-2
  > .toc-content-link
    font-weight 600

.toc-content-link
  position relative
  display block
  padding 5px 20px
  white-space nowrap
  overflow hidden
  text-overflow ellipsis
  transition all .2s ease-in-out

  &:before
    content ""
    position absolute
    top calc(50% - 2px)
    left 8px
    height 4px
    width 4px
    border-radius 50%
    background #333

  &.active
    color #000
    background #efefef

.toc-content-item
  .toc-content-child
    height 0
    overflow hidden
    transition all .2s ease-in-out
    &.active
      height 100%
  > .toc-content-child
      .toc-content-link
        padding-left 40px

        &:before
          left 28px

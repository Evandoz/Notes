.header
  padding: 30px 20px 0
  background: transparent
  z-index: 9
  .inner
    max-width: 1000px
    display: flex
    justify-content: space-between
    align-items: center
    margin: 0 auto
    .searchbar
      padding: 5px 0
      cursor: pointer
      z-index: 9
      ul
        position: relative
        width: 30px
        height: 30px
        list-style: none
        li
          position: absolute
          &:first-child
            left: 3px
            top: 4px
            width: 20px
            height: 20px
            border: 1px solid color-white
            border-radius: 50%
            box-sizing: border-box
          &:last-child
            right: 2px
            bottom: 4px
            width: 10px
            height: 1px
            background: color-white
            transform-origin: 100% 100%
            transform: rotate(38deg)
    .navbar
      display: flex
      justify-content: space-between
      align-items: center
      .nav
        text-align: center
        opacity: 0
        transition: all .4s
        @media mq-tablet
          transform: translateX(15px)
        @media mq-mobile
          display: flex
          flex-direction: column
          justify-content: center
          position: fixed
          padding: 20px 0
          left: 0
          right: 0
          bottom: 0
          z-index: 9
          background: color-white
          transform: translate3d(0, 100%, 0)
          .nav-item
            display: block
            padding: 15px 0
            color: color-dark!important
            font-size: 1.2em
            text-align: center
        &.on
          opacity: 1
          @media mq-tablet
            transform: translateX(0)
          @media mq-mobile
            transform: translate3d(0, 0, 0)
            & + .overlayer
              position: fixed
              top: 0
              left: 0
              right: 0
              bottom: 0
              z-index: 4
              filter: blur(10px)
              background: rgba(7, 17, 17, .7)
        .nav-item
          position: relative
          height: 40px
          padding: 10px 15px
          text-align: center
          color: color-white
          letter-spacing: 2px
          display: inline-block
          &:after
            content: ''
            position: absolute
            left: 50%
            bottom: 0
            width: 3px
            height: 3px
            border-radius: 50%
            background: transparent
            transition: background .3s
          &:hover
            &:after
              background: color-white

      .toggle
        padding: 5px 0
        cursor: pointer
        z-index: 99
        ul
          position: relative
          width: 30px
          height: 30px
          list-style: none
          li
            position: absolute
            left: 0
            top: 14px
            width: 100%
            height: 1px
            background: color-white
            &:first-child
              top: 4px
              width: 77%
            &:last-child
              top: 24px
              width: 66%
        &.on
          li
            transform-origin: center center
            transform: rotate(-45deg)
            top: 15px
            &:first-child
              opacity: 1
              filter: opacity(100)
              transform-origin: center center
              transform: rotate(45deg)
              top: 15px
              width: 100%
            &:last-child
              opacity:0
              filter: opacity(0)
              transition: all 0s ease 0s

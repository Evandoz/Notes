.header
  position relative
  &.is-home
    background 50%/cover no-repeat rgba(0, 0, 0, 0.96)
    .nav
      position relative
      top -70px
      color rgba(255, 255, 255, .75)

    &:before
      content ""
      position absolute
      top 0
      right 0
      bottom 0
      left 0
      display block
      background rgba(0, 0, 0, 0.24)
  &.is-page
    background color-white-background
    box-shadow 0 0 10px rgba(0, 0, 0, 0.02)
    .container
      display flex
      justify-content space-between

.cover
  position relative
  display flex
  flex-direction column
  justify-content center
  align-items center
  max-height 450px
  min-height 200px
  padding 6vw 0 calc(6vw + 50px)
  box-sizing border-box
  .title
    margin 0
    color rgba(255, 255, 255, 1)
    font-size 2.2rem
    font-weight bolder
  .desc
    padding 5px 0
    color rgba(255, 255, 255, .75)
    font-size 1.2rem

.logo
  height 70px
  z-index 4
  .title
    display block
    padding 0 10px
    line-height 70px
    font-size 1.8rem
    color color-dark
    text-align center

.nav
  height 70px
  box-sizing border-box
  color color-dark
  background transparent
  z-index 4
  ul.nav-menu
    font-size 0
    li.nav-item
      display inline-block
    li.nav-item a
      display block
      height 70px
      padding 0 10px
      line-height @height
      font-size 15px
      text-align center
  ul.nav-icon
    display none
    @media mq-mobile
      display none /* 备用 */
      position relative
      width 30px
      height 30px
      margin 0 5px
      padding 0
      cursor pointer
      list-style none
      li
        position absolute
        left 0
        top 14px
        width 100%
        height 1px
        background color-dark
        transition all .3s ease 0s
        &:first-child
          top 5px
          width 80%
        &:last-child
          top 23px
          width 70%
      &.on
        li
          transform-origin center center
          transform rotate(-45deg)
          top 15px
          &:first-child
            opacity 1
            filter opacity(100)
            transform-origin center center
            transform rotate(45deg)
            top 15px
            width 100%
          &:last-child
            opacity:0
            filter opacity(0)
            transition all 0s ease 0s

.header
  position: relative
  background-position: center
  background-attachment: fixed
  background-repeat: no-repeat
  .inner
    max-width: 1000px
    margin: 0 auto
    padding: 0 20px
    .title-wrapper
      min-height: 100%
      padding: 60px 0 140px
      @media mq-mobile
        padding: 40px 0 100px
      text-align: center
      a
        font-size: 2.2em
        color: color-white
        text-shadow: 2px
        text-shadow: 2px 2px 4px color-dark
    .nav-wrapper
      display: flex
      justify-content: space-between
      align-items: center
      height: 40px
      padding: 20px 0
      @media mq-mobile
        padding: 10px 0
      .searchbar
        padding: 5px 0
        cursor: pointer
        ul
          position: relative
          width: 30px
          height: 30px
          list-style: none
          li
            position: absolute
            &:first-child
              left: 3px
              top: 4px
              width: 20px
              height: 20px
              border: 1px solid color-white
              border-radius: 50%
              box-sizing: border-box
            &:last-child
              right: 2px
              bottom: 4px
              width: 10px
              height: 1px
              background: color-white
              transform-origin: 100% 100%
              transform: rotate(38deg)

        #search-form-wrap
          display: none
          &.on
            display: block

          .overlayer
            position: fixed
            top: 0
            left: 0
            width: 100%
            height: 100%
            background: color-white
            opacity: .9
            z-index: 999

          .search-form
            position: fixed
            top: 45%
            left: 50%
            width: 100%
            text-align: center
            transform: translate(-50%,-50%)
            z-index: 9999

          .search-form-label
            display: inline-block
            max-width: 100%
            margin-bottom: 10px
            font-size: font-size
            color: color-font
            text-transform: uppercase

          .search-form-input
            border: 0
            color: default
            width: 100%
            height: 100%
            font-size: 2.4em
            text-align: center
            outline: none
            transition: all .5s ease .5s
            &::-webkit-search-results-decoration
            &::-webkit-search-cancel-button
              -webkit-appearance: none

          .search-form-submit
            display: block
            position: absolute
            top: 50%
            right: 10px
            margin-top: -7px
            font: 14px font-icon
            border: none
            color: color-white
            cursor: pointer
            &:hover, &:focus
              color: color-grey
      .navbar
        display: flex
        justify-content: space-between
        align-items: center
        .nav
          text-align: center
          opacity: 0
          transition: all .4s
          @media mq-tablet
            transform: translateX(15px)
          @media mq-mobile
            display: flex
            flex-direction: column
            justify-content: center
            position: absolute
            top: 0
            left: 0
            right: 0
            bottom: 0
            z-index: 4
            background: color-background
          &.on
            opacity: 1
            @media mq-tablet
              transform: translateX(0)
          .nav-item
            position: relative
            padding: 10px 15px
            text-align: center
            font-size: 1.1em
            letter-spacing: 2px
            @media mq-tablet
              display: inline-block
              color: color-white
              &:after
                content: ''
                position: absolute
                left: 50%
                bottom: 0
                width: 3px
                height: 3px
                border-radius: 50%
                background: transparent
                transition: background .3s
              &:hover
                &:after
                  background: color-white
            @media mq-mobile
              display: block
              padding: 10px 0
              color: color-dark
              &:hover
                background: color-white
        .toggle
          padding: 5px 0
          cursor: pointer
          z-index: 9
          ul
            position: relative
            width: 30px
            height: 30px
            list-style: none
            li
              position: absolute
              left: 0
              top: 14px
              width: 100%
              height: 1px
              background: color-white
              &:first-child
                top: 4px
                width: 77%
              &:last-child
                top: 24px
                width: 66%
          &.on
            li
              transform-origin: center center
              transform: rotate(-45deg)
              top: 15px
              @media mq-mobile
                background: color-black
              &:first-child
                opacity: 1
                filter: opacity(100)
                transform-origin: center center
                transform: rotate(45deg)
                top: 15px
                width: 100%
              &:last-child
                opacity:0
                filter: opacity(0)
                transition: all 0s ease 0s

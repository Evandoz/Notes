.header
  position: fixed
  top: 0
  width: 100%
  padding: 0 2%
  background: color-white
  overflow: hidden
  z-index: 4

  .inner
    position: relative
    margin: 0 auto
    transition: padding .3s
    @media mq-normal
      width: 75%
      min-width: 952px
  .wrap
    width: 100%
    display: flex
    justify-content: space-between
    align-items: center
    transition: transform .3s
  .header-brand
    padding: 10px 0
    .brand-title
      display: block
      height: 40px
      margin: 0 -12px
      line-height: @height
      font-size: 1.6em
      color: color-font
      letter-spacing: 5px
  .header-nav
    padding: 10px 0
    bakcground: color-white
    ul.menu-list
      font-size: 0
      li.menu-item
        display: inline-block
      li.menu-item a
        display: block
        height: 40px
        padding: 0 10px
        line-height: @height
        color: color-dark
        font-size: 15px
        text-align: center
      @media mq-mobile
        display: none

    ul.menu-icon
      display: none
      @media mq-mobile
        display: block
        position: relative
        width: 30px
        height: 30px
        margin: 0
        padding: 0
        cursor: pointer
        list-style: none
        li
          position: absolute
          left: 0
          top: 14px
          width: 100%
          height: 1px
          background: color-dark
          transition: all .3s ease 0s
          &:first-child
            top: 5px
            width: 80%
          &:last-child
            top: 23px
            width: 70%
        &.on
          li
            transform-origin: center center
            transform: rotate(-45deg)
            top: 15px
            &:first-child
              opacity: 1
              filter: opacity(100)
              transform-origin: center center
              transform: rotate(45deg)
              top: 15px
              width: 100%
            &:last-child
              opacity:0
              filter: opacity(0)
              transition: all 0s ease 0s

  .page-title
    position: absolute
    top: 0
    width: 100%
    height: 60px
    line-height: @height
    text-align: center
    letter-spacing: 2px
    transition: transform .3s

.header
  &.sticky
    box-shadow: 0 0 8px rgba(0, 0, 0, .2)
    transition: box-shadow .3s
    .wrap
      transform: translate3d(0, -100%, 0)
  &:not(.sticky)
    .page-title
      transform: translate3d(0, 100%, 0)

.copy
  height: 60px

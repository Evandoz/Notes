.header
  padding: 10px 2%
  background: #fff
  /* box-shadow: 0 2px 4px rgba(0, 0, 0, .05) */

  .inner
    display: flex
    justify-content: space-between
    align-items: center
    margin: 0 auto
    @media mq-normal
      width: 78%
      min-width: 982px

  .header-nav
    ul.menu-list
      font-size: 0
      li.menu-item
        display: inline-block
        height: 40px
        margin-right: 15px
        line-height: @height
        color: color-dark
        font-size: font-size
        text-align: center
        &:last-child
          margin: 0
      @media mq-mobile
        display: none

    ul.menu-icon
      display: none
      @media mq-mobile
        display: block
        position: relative
        width: 30px
        height: 30px
        margin: 0
        padding: 0
        cursor: pointer
        list-style: none
        li
          position: absolute
          left: 0
          top: 14px
          width: 100%
          height: 1px
          background: color-dark
          &:first-child
            top: 5px
            width: 80%
          &:last-child
            top: 23px
            width: 70%
        &.on
          li
            transform-origin: center center
            transform: rotate(-45deg)
            top: 15px
            @media mq-mobile
              background: color-dark!important
            &:first-child
              opacity: 1
              filter: opacity(100)
              transform-origin: center center
              transform: rotate(45deg)
              top: 15px
              width: 100%
            &:last-child
              opacity:0
              filter: opacity(0)
              transition: all 0s ease 0s

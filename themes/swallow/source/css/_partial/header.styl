.header
  padding: 30px 20px 0
  background: transparent
  z-index: 9
  @media mq-mobile
    padding: 20px
  .inner
    max-width: max-width
    display: flex
    justify-content: space-between
    align-items: center
    margin: 0 auto
    .navbar
      display: flex
      justify-content: space-between
      align-items: center
      .menu-list
        text-align: center
        opacity: 0
        transition: all .4s
        @media mq-tablet
          transform: translateX(15px)
        @media mq-mobile
          display: flex
          flex-direction: column
          justify-content: center
          position: fixed
          padding: 20px 0
          left: 15px
          right: 15px
          top: 50%
          margin-top: -80px
          /* bottom: 0 */
          z-index: 9
          background: color-white
          transform: translate3d(0, -5%, 0)
          .menu-item
            display: block
            padding: 15px 0
            color: color-dark!important
            font-size: 1.2em
            text-align: center
        &.on
          opacity: 1
          @media mq-tablet
            transform: translateX(0)
          @media mq-mobile
            transform: translate3d(0, 0, 0)
            & + .overlayer
              position: fixed
              top: 0
              left: 0
              right: 0
              bottom: 0
              z-index: 4
              filter: blur(2px)
              background: rgba(7, 17, 17, .7)
        .menu-item
          position: relative
          height: 40px
          padding: 10px 15px
          text-align: center
          color: color-white
          letter-spacing: 2px
          display: inline-block
          &:after
            content: ''
            position: absolute
            left: 50%
            bottom: 0
            width: 3px
            height: 3px
            border-radius: 50%
            background: transparent
            transition: background .3s
          &:hover
            &:after
              background: color-white

      .icon-toggle
        padding: 5px 0
        cursor: pointer
        z-index: 99
        ul
          position: relative
          width: 30px
          height: 30px
          list-style: none
          li
            position: absolute
            left: 0
            top: 14px
            width: 100%
            height: 1px
            background: color-white
            &:first-child
              top: 5px
              width: 80%
            &:last-child
              top: 23px
              width: 70%
        &.on
          li
            transform-origin: center center
            transform: rotate(-45deg)
            top: 15px
            &:first-child
              opacity: 1
              filter: opacity(100)
              transform-origin: center center
              transform: rotate(45deg)
              top: 15px
              width: 100%
            &:last-child
              opacity:0
              filter: opacity(0)
              transition: all 0s ease 0s

    .searchbar
      z-index: 999
      .icon-search
        padding: 5px 0
        cursor: pointer
        z-index: 9999
        ul
          position: relative
          width: 30px
          height: 30px
          list-style: none
          li
            position: absolute
            &:first-child
              left: 3px
              top: 4px
              width: 20px
              height: 20px
              border: 1px solid color-white
              border-radius: 50%
              box-sizing: border-box
            &:last-child
              right: 2px
              bottom: 4px
              width: 10px
              height: 1px
              background: color-white
              transform-origin: 100% 100%
              transform: rotate(38deg)
      .search-wrap
        display: flex
        flex-direction: column
        justift-content: center
        align-items: center
        position: fixed
        top: 0
        left: 0
        width: 100vw
        height: 40vh
        background: rgba(0, 1, 2, .9)
        z-index: 999
        visibility: hidden
        transform: translate3d(0,-100%,0)
        &.on
          visibility: visible
          transform: translate3d(0,0,0)
          transition: transform .5s cubic-bezier(0.2,1,0.3,1)
          height: 50vh
          padding: 21vh 0
          input
            height: 8vh
            width: 80vw
            max-width: 980px
            padding: 1vh 2vw
            font-size: 4vh
            color: color-white
            text-align: center
            border: 0
            border-radius: 30px
            box-sizing: border-box
            background: rgba(255, 255, 255, .6)
      .down-layer
        position: fixed
        bottom: 0
        left: 0
        width: 100vw
        height: 60vh
        background: rgba(0, 1, 2, .9)
        z-index: 999
        visibility: hidden
        transform: translate3d(0,100%,0)
        &.on
          visibility: visible
          transform: translate3d(0,0,0)
          transition: transform .5s cubic-bezier(0.2,1,0.3,1)



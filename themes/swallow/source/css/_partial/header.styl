.header
  &.is-home
    .outer
      position relative
      top calc(36vh - 90px)
      z-index 4

    .nav
      @media mq-mobile
        margin 0 auto

  &.is-post,
  &.is-page
    .nav-menu
      @media mq-mobile
        display none

    .nav-icon
      @media mq-mobile
        display block

  &.is-post
    background #ffffff

    @media mq-mobile
      &.sticky
        position fixed
        top -60px
        left 0
        width 100%
        z-index 4
        transform translate3d(0, 100%, 0)
        transition transform .4s ease-in-out
      +.header-placeholder
        display block
        position fixed
        top 0
        left 0
        width 100%
        height 60px

    .nav-icon li
      background #333

  &.is-page
    .nav-icon li
      background rgba(255, 255, 255, 0.85)

.header-placeholder
  display none

.logo
  height 100px
  color #222
  z-index 4
  .title
    display block
    padding 10px
    line-height 80px
    font-size 2.2rem
    font-family TimesNewRoman, Times New Roman, Times, Baskerville, Georgia, serif
    text-align center

.nav
  height 100px
  box-sizing border-box
  color #222
  background transparent
  z-index 4

  .nav-menu
    font-size 0
    li.nav-item
      display inline-block

  .nav-item a
    display block
    height 100px
    padding 0 10px
    line-height @height
    font-size 1rem
    font-weight 520
    text-align center
    letter-spacing 2px

  .nav-icon
    display none
    position relative
    width 30px
    height 30px
    margin 15px 0
    cursor pointer
    list-style none
    li
      position absolute
      left 0
      top 14px
      width 100%
      height 1px
      transition all .3s ease 0s
      &:first-child
        top 5px
        width 80%
      &:last-child
        top 23px
        width 70%
    &.on
      li
        transform-origin center center
        transform rotate(-45deg)
        top 15px
        &:first-child
          opacity 1
          filter opacity(100)
          transform-origin center center
          transform rotate(45deg)
          top 15px
          width 100%
        &:last-child
          opacity:0
          filter opacity(0)
          transition all 0s ease 0s

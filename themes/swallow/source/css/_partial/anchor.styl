.top-anchor
  display: none
  @media mq-normal
    display: block
    position: fixed
    right: 48px
    bottom: 144px
    width: 50px
    height: 50px
    padding: 16px 10px
    color: color-dark
    box-sizing: border-box
    border-radius: 1px
    cursor: pointer
    z-index: 9
    opacity: 0
    transition:all .4s ease-in-out 0s

    &.on
      opacity: 1
      &:hover
      &:focus
        opacity: .6
    ul
      position: relative
      height: 15px
      width: 30px
      margin: 0
      padding: 0
      list-style: none
      li
        position: absolute
        width: 21px
        height: 1px
        list-style: none
        background: color-dark
        &:first-child
          left: 0
          bottom: 0
          transform-origin: 0 100%
          transform: rotate(-45deg)
        &:last-child
          right: 0
          bottom: 0
          transform-origin: 100% 100%
          transform: rotate(45deg)

body
  font font-size font-sans
  -webkit-text-size-adjust: 100%
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  background color-grey-background
  overflow hidden

*
  color: inherit
  text-shadow 4px 4px 2px rgba(0, 0, 0, .02)

a, a:hover, a:focus
  color inherit
  text-decoration: none

.outer
  display flex
  justify-content space-between
  max-width 1080px
  margin 0 auto

  @media mq-normal
    .main
      width calc(100% - 310px)

    .aside
      width 280px

.inner
  max-width 960px
  margin 0 auto

  .main
    width 100%

.card
  padding 40px
  box-sizing border-box
  border-radius 4px
  background color-white-background
  box-shadow 0 0 10px rgba(0, 0, 0, 0.02)

.content
  min-height calc(100vh - 60px)
  padding-bottom 60px

.overflow
  height 100vh
  width calc(100vw + 20px)
  box-sizing border-box
  overflow auto

.wrapper
  width 100vw

.scrollbar
  position fixed
  top calc(50vh - 100px)
  right 5px
  width 10px
  height 200px
  background #aaa
  border-radius 5px

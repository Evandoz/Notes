body
  font font-size font-sans
  -webkit-text-size-adjust: 100%
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale

*
  color: inherit
  text-shadow 4px 4px 2px rgba(0, 0, 0, .02)

a, a:hover, a:focus
  color inherit
  text-decoration: none

.cover
  position relative
  display flex
  flex-direction column
  justify-content space-between
  align-items center
  height 70px
  margin-top -60px
  padding calc(17vh - 60px) 0 17vh
  z-index -1
  background 50%/cover no-repeat rgba(0, 0, 0, 0.96)
  &:before
    content ""
    position absolute
    top 0
    right 0
    bottom 0
    left 0
    display block
    background rgba(0, 0, 0, 0.24)
  .title
    position relative
    margin 0
    color rgba(255, 255, 255, 1)
    font-size 2rem
  .desc
    position relative
    color rgba(255, 255, 255, .75)
    font-size 1.2rem

.outer
  display flex
  justify-content space-between
  flex-wrap wrap
  max-width 1040px
  margin 0 auto
  padding 0 20px

  .main
    width calc(100% - 280px)

  .aside
    width 260px

  @media mq-mobile
    .main, .aside
      width 100%

.inner
  max-width 840px
  margin 0 auto
  padding 0 20px

  .main
    width 100%

.card
  padding 30px
  box-sizing border-box
  border-radius 2px
  background #fff
  box-shadow 0 0 15px 5px rgba(0, 0, 0, 0.035)

  @media mq-mobile
    padding 20px!important

.content
  min-height calc(100vh - 60px)
  padding-bottom 60px

  .outer, .inner
    padding-top 30px
    padding-bottom 30px

.overflow
  overflow hidden

.hiddenbar
  margin-right -20px

.wrapper
  width 100vw

.scrollbar
  position fixed
  top calc(50vh - 100px)
  right 5px
  width 10px
  height 200px
  background #aaa
  border-radius 5px

body
  font font-size font-sans
  -webkit-text-size-adjust: 100%
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  background color-grey-background

*
  color: inherit
  text-shadow 4px 4px 2px rgba(0, 0, 0, .02)

a, a:hover, a:focus
  color inherit
  text-decoration: none

.outer
  display flex
  justify-content space-between
  flex-wrap wrap
  max-width 1040px
  margin 0 auto
  padding 0 20px

  .main
    width calc(100% - 280px)

  .aside
    width 260px

  @media mq-mobile
    .main, .aside
      width 100%

.inner
  max-width 840px
  margin 0 auto
  padding 0 20px

  .main
    width 100%

.card
  padding 40px
  box-sizing border-box
  border-radius 2px
  background color-white-background
  box-shadow 0 0 10px rgba(0, 0, 0, 0.02)

  @media mq-mobile
    padding 20px!important

.content
  min-height calc(100vh - 60px)
  padding-bottom 60px

  .outer, .inner
    padding-top 30px
    padding-bottom 30px

.overflow
  overflow hidden

.hiddenbar
  margin-right -20px

.wrapper
  width 100vw

.scrollbar
  position fixed
  top calc(50vh - 100px)
  right 5px
  width 10px
  height 200px
  background #aaa
  border-radius 5px

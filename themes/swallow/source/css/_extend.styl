$base-style
  h1
    font-size: 1.5em
  h2
    font-size: 1.3em
  h3
    font-size: 1.1em
  h4
    font-size: 1em
  h5
    font-size: 1em
  h6
    font-size: 1em
    color: #color-font
  hr
    width: 100%
    height: 1px
    border: none
    margin: 20px 0
    background: color-border
    background-image: repeating-linear-gradient(-45deg, #fff, #fff 4px, transparent 4px, transparent 8px)
  strong
    font-weight: bold
  em, cite
    font-style: italic
  sup, sub
    font-size: 0.75em
    line-height: 0
    position: relative
    vertical-align: baseline
  sup
    top: -0.5em
  sub
    bottom: -0.2em
  small
    font-size: 0.85em
  acronym, abbr
    border-bottom: 1px dotted
  ul, ol, dl
    margin: 0 20px
    line-height: 2
  ul, ol
    ul, ol
      margin-top: 0
      margin-bottom: 0
  ul
    list-style: disc
  ol
    list-style: decimal
  dt
    font-weight: bold

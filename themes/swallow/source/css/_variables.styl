// Config
support-for-ie = false
vendor-prefixes = webkit moz ms official

// Colors
color-white = #ffffff
color-lighter = #fbfbfb
color-light = #f6f6f6
color-border = #eeeeee
color-grey = #888888
color-font = #444
color-white-background = #fff
color-grey-background = #f6f7f8
color-dark = #222222
color-black = #000000

// Fonts
@font-face
  font-family: SourceCodePro
  src: url("fonts/SourceCodePro-Regular.ttf") format("truetype")
  font-style: normal
  font-weight: normal

// Sans-Serif (非衬线字体，醒目，用于标题、短内容等)
font-sans = -apple-system, BlinkMacSystemFont, "Helvetica Neue", "Helvetica", "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", sans-serif
// Serif (衬线字体，易读，用于正文、长内容等)
font-serif = Georgia, "Times New Roman", serif
// Monospace (等宽字体，用于代码)
font-mono = "Source Code Pro", Consolas, Monaco, Menlo, Consolas, monospace

font-size = 16px
line-height = 1.75

// Animation
@keyframes spinner
  0%
    -moz-transform: rotate(0deg)
    -webkit-transform: rotate(0deg)
    -ms-transform: rotate(0deg)
    transform: rotate(0deg)

  100%
    -moz-transform: rotate(359deg)
    -webkit-transform: rotate(359deg)
    -ms-transform: rotate(359deg)
    transform: rotate(359deg)

// Media queries
mq-mobile = "screen and (max-width: 767px)"
mq-tablet = "screen and (min-width: 768px) and (max-width: 1199px)"
mq-normal = "screen and (min-width: 1200px)"
